.col-sm-offset-4.col-sm-4.text-center
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    .form-horizontal
      = f.hidden_field :reset_password_token

      .form-group.text-danger
        .col-sm-offset-3.col-sm-9
          = devise_error_messages!

      .form-group
        = f.label :password, t('.password'), class: 'col-sm-3 control-label'
        .col-sm-9
          = f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: t('.placeholder.password')

      .form-group
        .col-sm-offset-3.col-sm-9
          = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: t('.placeholder.password_confirmation')

      .form-group
        .col-sm-offset-3.col-sm-9
          = f.button type: :submit, name: nil, class: 'btn btn-primary' do
            .glyphicon.glyphicon-wrench
            = t('.actions.change_password')

      .form-group
        .col-sm-offset-3.col-sm-9
          = render 'devise/shared/links'
