%tr.nested-fields
  %td
    = f.text_field :key, class: 'form-control'
    = f.error :key, class: 'form-control'
  %td
    = f.text_field :description, class: 'form-control'
    = f.error :description, class: 'form-control'
  %td
    = f.number_field :estimated_time, { min: 0, step: 1, class: 'form-control' }
    = f.error :estimated_time, class: 'form-control'
  %td.remove-association
    = link_to_remove_association t('.actions.delete'), f, class: 'btn btn-default btn-xs'
