= form_for @order do |f|
  .form-horizontal
    .form-group
      = f.label :key, t('.key'), class: 'col-sm-1 control-label'
      .col-sm-3
        = f.text_field :key, class: 'form-control'
        = f.error :key, class: 'form-control'

    .form-group
      = f.label :description, t('.description'), class: 'col-sm-1 control-label'
      .col-sm-3
        = f.text_field :description, class: 'form-control'
        = f.error :description, class: 'form-control'

    .form-group
      = f.label :amount, t('.amount'), class: 'col-sm-1 control-label'
      .col-sm-3
        = f.number_field :amount, { min: 0, step: 1, class: 'form-control' }
        = f.error :amount, class: 'form-control'

    .form-group
      .col-sm-offset-1.col-sm-3
        = f.button type: :submit, name: nil, class: 'btn btn-primary' do
          .glyphicon.glyphicon-save
          = t('.actions.submit')
